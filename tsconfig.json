{
  "compilerOptions": {
    // Target
    "target": "ESNext",
    "module": "ESNext",

    // Modules
    "moduleResolution": "bundler",

    // CommonJS support
    "esModuleInterop": true,

    // Best practices
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,

    // DX
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./.nitro/types/nitro.d.ts", "./**/*"]
}
